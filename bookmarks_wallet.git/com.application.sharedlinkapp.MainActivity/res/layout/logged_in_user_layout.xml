<?xml version="1.0" encoding="utf-8"?>
    
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="fill_parent"
   	android:layout_height="fill_parent" 
	android:orientation="vertical">

    
	<TextView 
		android:layout_width="wrap_content"
 		android:layout_height="wrap_content" 
		android:textSize="20dip"
		android:layout_margin="10dip"
		android:textColor="@color/blue"
		android:text="user profile"/>

    
	<LinearLayout
		android:layout_width="fill_parent"
   		android:layout_height="wrap_content" 
	    android:padding="10dip"


		android:layout_marginLeft="10dip"
		android:layout_marginTop="10dip"
		android:layout_marginRight="10dip"


	   	android:gravity="center_vertical"
		android:background="@color/icedWhite"
   		android:orientation="horizontal">
        	<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
			    android:src="@drawable/ic_launcher"
			       />
			        
			<TextView 
		        android:id="@+id/loggedInUsernameTextId"
		    	android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="10dip" 
			   	android:textSize="20dip"
			    android:text="loggedInUsername"
		           />
			    
	</LinearLayout>
	
	<Button
        android:id="@+id/logoutButtonId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

		android:layout_marginLeft="10dip"
		android:layout_marginBottom="10dip"
		android:layout_marginRight="10dip"

        android:text="LOGOUT" />
		
	
	
	<TextView 
		android:layout_width="wrap_content"
 		android:layout_height="wrap_content" 
		android:textSize="20dip"
		android:layout_margin="10dip"
		android:textColor="@color/blue"
		android:text="get your links box"/>

    
	<LinearLayout
	    
        android:id="@+id/getYourLinksLayoutId"
		android:layout_width="fill_parent"
   		android:layout_height="wrap_content" 
	    android:padding="10dip"
	   	android:layout_margin="10dip"
	   	android:gravity="center_vertical"
		android:background="@color/icedWhite"
   		android:orientation="horizontal">
			        
			<TextView 
		    	android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="10dip" 
			   	android:textSize="20dip"
			    android:text="get links list  >"
		           />
			    
	</LinearLayout>
	
		    <TextView 
	        android:id="@+id/testBoxTextId"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
			android:textColor="@color/blue"
	
			android:textSize="20dip"
			android:layout_margin="10dip"
			android:text="TEST box"/>
	
	
		<LinearLayout 
		    android:id="@+id/testBoxLayoutId"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" 
		    android:orientation="vertical"
		    android:background="@color/icedWhite"
		    android:layout_margin="10dip"
		    >
			
		
			    
		    <Button
		        android:id="@+id/connectAndFetchDbButtonId"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		
				android:layout_margin="10dip"
		        android:text="fetch_data_from_db" />
		    
		    <TextView 
		        android:id="@+id/resultTextId"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		
				android:textColor="@color/stoneBlack"
				android:layout_margin="10dip"
				android:text="qurey results to be shown"/>
	    
		</LinearLayout>
	
	
	
	
</LinearLayout>
		